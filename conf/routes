# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /territories                controllers.TerritoryController.getTerritories

GET     /students                controllers.StudentController.getStudents
GET     /student/:id             controllers.StudentController.getStudent(id:Integer)
GET     /adminHome               controllers.StudentController.getAdmin


GET     /chart                   controllers.ChartController.getChart
GET     /gradeclasschart         controllers.StudentController.getGradeClassChart


GET     /testData                controllers.TestDataController.getTestDataGenerator
POST    /addStudentCourseRows    controllers.TestDataController.postAddStudentCourseRows
POST    /addAssignmentRows       controllers.TestDataController.postAddAssignmentRows
POST    /addAssignmentRows       controllers.TestDataController.postAddAssignmentRows
POST    /addAssignmentRow       controllers.TestDataController.postAddAssignmentRow

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
